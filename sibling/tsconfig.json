{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"]
}
